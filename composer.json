{
    "name": "welford-media/going-postal",
    "description": "CraftCMS plugin to provide a mail adapter for the Postal mail server.",
    "type": "craft-plugin",
    "license": "proprietary",
    "support": {
        "email": "hello@welfordmedia.co.uk"
    },
    "version": "1.0.3",
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.3.5"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "WelfordMedia\\GoingPostal\\": "src/"
        }
    },
    "extra": {
        "handle": "going-postal",
        "name": "Going Postal",
        "developer": "Welford Media",
        "documentationUrl": "",
        "class": "WelfordMedia\\GoingPostal\\GoingPostal"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
